<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Park</h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">

              <dt>Name</dt>
              <dd><%= @park.name %></dd>

              <dt>Address</dt>
              <dd><%= @park.address %></dd>

              <dt>Neighborhood</dt>
              <dd><%= @park.neighborhood %></dd>

<!--               <dt>Rating</dt>
              <dd><%= @park.rating %></dd> -->

              <dt>Comments</dt>
              <dd><%= @park.comments %></dd>

              <dt>User</dt>
              <dd><%= @park.user.username %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/parks" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <% if current_user.id == @park.user_id %>

              <a href="/parks/<%= @park.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>
              <% end %>

              <% if current_user.id == @park.user_id %>
              <a href="/delete_park/<%= @park.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
              <%end%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
