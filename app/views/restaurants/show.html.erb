<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Restaurant</h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Name</dt>
              <dd><%= @restaurant.name %></dd>

              <dt>Address</dt>
              <dd><%= @restaurant.address %></dd>

              <dt>Neighborhood</dt>
              <dd><%= @restaurant.neighborhood %></dd>

              <!-- <dt>Rating</dt>
              <dd><%= @restaurant.rating %></dd> -->

              <dt>Comments</dt>
              <dd><%= @restaurant.comments %></dd>

              <dt>User</dt>
              <dd><%= @restaurant.user.username %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/restaurants" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/restaurants/<%= @restaurant.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_restaurant/<%= @restaurant.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
